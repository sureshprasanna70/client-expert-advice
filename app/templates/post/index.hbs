{{outlet}}
<div class="row">
  <div class="col-lg-8">
    {{#if tagSearch}}
      <h3>Search Results for: <i>{{searchedTag}}</i> </h3>
    {{else}}
      <h1>All Posts </h1>
    {{/if}}
  </div>
  <div class="col-lg-4">
    {{#link-to 'post.new' class="float-right btn btn-primary ml-1"}}{{fa-icon "feather"}} New Post {{/link-to}}
    {{#if tagSearch}}
      {{#link-to 'post' (query-params tag=null) class="float-right btn btn-primary"}} {{fa-icon "undo"}} Clear {{/link-to}}
    {{/if}}
  </div>
</div>
{{#each posts as |post|}}
  <div class="card">
    {{post-index post=post}}
  <div class="p-3">
    {{post-comment post=post}}
  </div>
</div>
{{/each}}

{{infinity-loader infinityModel=model  loadingText='Loading...' loadedText='You have viewed all the posts!'}}
