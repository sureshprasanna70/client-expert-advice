{{yield}}
<div class="row pl-3 pr-3">
    <h5 class="w-100">{{fa-icon "comment"}} Comments ({{post.comments.length}})
        {{#link-to "post.comment" post.id post.slug class="btn btn-outline-info float-right"}} Add Comment{{/link-to}}
    </h5>
    <div class="col-md-6 col-sm-12">
        <div class="comment-wrapper">
            <div class="panel panel-info">
                <div class="panel-heading">
                </div>
                <div class="panel-body">
                    <ul class="media-list">
                        {{#each post.comments as |comment|}}
                        <li class="media">
                            {{gravatar-image email=comment.user.email size=48 defaultImage='robohash' class="floar-left"}}
                            <div class="media-body">
                                <strong class="text-success">{{comment.user.email}}</strong>
                                <p>
                                    {{comment.title}}
                                </p>
                            </div>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
